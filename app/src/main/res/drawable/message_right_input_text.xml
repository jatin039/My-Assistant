<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="60dp" />
            <stroke
                android:width="2dp"
                android:color="#DDDDDD" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="0dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/textViewMessageRightEndColor"
                android:startColor="@color/textViewMessageRightStartColor" />
            <stroke
                android:width="1dp"
                android:color="@color/textViewMessageRightStartColor" />
            <corners
                android:radius="30dp" />
            <padding
                android:bottom="8dp"
                android:left="10dp"
                android:right="10dp"
                android:top="8dp" />
        </shape>
    </item>

</layer-list>